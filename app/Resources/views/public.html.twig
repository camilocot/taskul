{% extends "::base.html.twig" %}
{% block stylesheets %}
<style>

body {
	padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
	background: url(/img/bg-login.jpg) !important;
}
</style>
{% endblock %}
{% block body %}
<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="brand ajaxy" href="{{ path('homepage') }}"><img src="/img/skull_logo1.png" class="logo" alt="Logo">Taskul</a>
			<div class="nav-collapse collapse">

				{% if is_granted('ROLE_USER') %}
				{{ knp_menu_render('public_logged', {'currentClass': 'active'})  }}
				{% else %}
				{{ knp_menu_render('public', {'currentClass': 'active'})  }}
				{% endif %}
			</div><!--/.nav-collapse -->
		</div>
	</div>
</div>
<div class="container">
	<div class="row-fluid"><p><strong>BETA</strong>Taskul.net está en fase beta, por favor ayúdenos a mejorar cumplimentando el formulario de sugerencias y/o problemas. Gracias.<img src="/img/skull_logo1.png" alt="Logo" class="info-beta"></p></div>
<div id="content">
{% block content%}
	<h1>Bootstrap starter template</h1>
	<p>Use this document as a way to quick start any new project.<br> All you get is this message and a barebones HTML document.</p>
{% endblock content %}
</div>
</div> <!-- /container -->
<div id="footer">
  <div class="container">
    <p class="muted credit">Example courtesy <a href="http://martinbean.co.uk">Martin Bean</a> and <a href="http://ryanfait.com/sticky-footer/">Ryan Fait</a>.</p>
  </div>
</div>
{% endblock body %}