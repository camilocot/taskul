<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="taskul.status.choices" type="collection">
            <parameter key="inprogress">In progress</parameter>
            <parameter key="todo" >ToDo</parameter>
            <parameter key="done" >Done</parameter>

        </parameter>
    </parameters>
    <services>
      <service id="form.type.status" class="Taskul\TaskBundle\Form\Type\StatusType">
        <tag name="form.type" alias="status" />
        <argument>%taskul.status.choices%</argument>
      </service>
    </services>
</container>
