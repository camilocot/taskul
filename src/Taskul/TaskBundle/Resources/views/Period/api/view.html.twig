{% extends app.request.isXmlHttpRequest ? "::base_ajax.html.twig" : "TaskBundle::layout.html.twig" %}
{% trans_default_domain "TaskBundle" %}
{% block content %}
{{ apy_breadcrumb_trail_render() }}
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-user"></i><span class="break"></span>{{'task.view.period'|trans}}</h2>
                <div class="box-icon">
                    <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
                END: {{ period.end|date('d-m-Y') }}<br>
                BEGIN: {{ period.begin|date('d-m-Y') }}<br>
                <a href="{{ path('api_get_task_periods', {'idTask':idTask})}}" class="btn back">Volver</a>
            </div>

        </div><!--/box-->
    </div><!--/row-->
{% endblock %}