{% extends app.request.isXmlHttpRequest ? "::base_ajax.html.twig" : "TaskBundle::layout.html.twig" %}
{% trans_default_domain "TaskBundle" %}
{% block content %}
{{ apy_breadcrumb_trail_render() }}
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-user"></i><span class="break"></span>{{'task.new.period'|trans}}</h2>
                <div class="box-icon">
                    <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
                    <form class="form-horizontal validate ajaxform" action="{{ path( 'api_post_task_period',{'idTask': idTask} ) }}" method="POST" {{ form_enctype(form) }} id="form_task">
                        <input type="hidden" name="_method" value="{{ method }}" >
                        {{ form_errors(form) }}

                        <fieldset>
                            {{ form_row(form.begin, { 'attr': {'class':'dateITA','data-date-format': 'dd/mm/yyyy', 'placeholder':'dd/mm/yyyy'} , 'label':'task.new.period.begin'|trans, 'help':'task.new.period.help.begin'|trans }) }}
                            {{ form_row(form.end, { 'attr': {'class':'dateITA','data-date-format': 'dd/mm/yyyy', 'placeholder':'dd/mm/yyyy'} , 'label':'task.new.period.end'|trans, 'help':'task.new.period.help.end'|trans }) }}
                        </fieldset>
                        {{ form_rest(form) }}
                        <div class="form-actions">
                            <button class="btn btn-primary" type="submit"><i class=" icon-file fa-icon-save"></i>&nbsp;{{ 'task.new.finish'|trans }}</button>
                            <a class="btn btn-cancel ajaxy" href="{{ path('api_get_tasks') }}" title={{'menu.title.task.list'|trans({},'MainBundle')}}>
                                <i class="fa-icon-undo"></i>&nbsp;{{ 'task.new.back'|trans }}
                            </a>
                        </div>
                    </form>
                </div>

            </div><!--/box-->

        </div><!--/row-->
{% endblock %}