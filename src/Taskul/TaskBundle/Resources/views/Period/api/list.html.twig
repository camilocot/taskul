{% extends app.request.isXmlHttpRequest ? "::base_ajax.html.twig" : "TaskBundle::layout.html.twig" %}
{% trans_default_domain "TaskBundle" %}
{% block content %}
{{ apy_breadcrumb_trail_render() }}
<div id="main" ng-app>
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="icon-user"></i><span class="break"></span>{{'task.list.title'|trans}}</h2>
            <div class="box-icon">
            <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
            <div class="well hidden-desktop">
               <a href="{{ path('api_new_task') }}" class="btn ajaxy btn-primary" title="{{'task.list.buttons.new'|trans({},'TaskBundle')}}">
                {{'task.list.buttons.new'|trans({},'TaskBundle')}}
                </a>
            </div>
            {% if periods|length > 0 %}
            <table class="table table-striped table-bordered bootstrap-datatable" id="list">
                <thead>
                    <tr>
                        <th data-class="expand" data-sort-initial="true">{{'task.list.name'|trans}}</th>
                        <th data-hide="phone,tablet">{{'task.list.status'|trans}}</th>
                        <th data-sort-ignore="true">{{'lists.actions'|trans({},'MainBundle')}}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in periods %}
                    <tr>
                        <td>
                            {{ entity.begin|date}}
                        </td>
                        <td>
                        {{ entity.end|date}}
                        </td>
                        <td>
                            <a href={{ path('api_get_task_period', { 'idTask': idTask, 'id': entity.id }) }} class="btn view-period">Ver</a>
                            <a href={{ path('api_edit_task_period', { 'idTask': idTask, 'id': entity.id }) }} class="btn edit-period">Editar</a>
                            <a href={{ path('api_remove_task_period', { 'idTask': idTask, 'id': entity.id }) }} class="btn remove-period">Borrar</a>
                        </td>
                        </tr>
                        {% endfor %}
                </tbody>
            </table>
                {% endif %}
                <div class="well">
                   <a href="{{ path('api_new_task_period', {'idTask': idTask}) }}" class="btn ajaxy btn-primary" title="{{'task.list.buttons.new'|trans({},'TaskBundle')}}">
                    {{'task.list.buttons.new.period'|trans({},'TaskBundle')}}
                    </a>
                </div>
        </div>
    </div><!--/box-->

</div><!--/row-->
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script>
{% endblock %}