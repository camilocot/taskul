{% extends "TaskBundle::layout.html.twig" %}
{% block content %}
<div>
    <hr>
    <ul class="breadcrumb">
        <li>
            <a href="#">Home</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#">Tasks</a>
        </li>
    </ul>
    <hr>
</div>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="icon-user"></i><span class="break"></span>Task list</h2>
        </div>
        <div class="box-content">

            <table class="table table-striped table-bordered bootstrap-datatable datatable" id="list">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Dateend</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('task_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>
                            {% set desc = entity.description|striptags %}
                            {% if desc|length > 30 %}
                            {{ desc|slice(0,30) }} ... <a class="btn btn-small boostrap-tp"  title="{{ desc }}" href="#"><i class="icon-download"></i></a>
                            {% else %}
                            {{ desc }}
                            {% endif %}</td>
                            <td>{% if entity.dateEnd %}{{ entity.dateEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <ul>
                                    {% if is_granted('VIEW', entity) %}
                                    <li>
                                        <a href="{{ path('task_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    {% endif %}
                                    {% if is_granted('EDIT', entity) %}
                                    <li>
                                        <a href="{{ path('task_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                    {% endif %}
                                </ul>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="form-actions" style="margin: 20px -10px -8px">
                   <a href="{{ path('task_new') }}" class="btn">
                    Create a new entry
                    </a>
                </div>
        </div>

    </div><!--/box-->

</div><!--/row-->
{% endblock %}
{% block javascripts %}
<script src="//ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
{% javascripts '@MainBundle/Resources/public/js/datatables-boostrap.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
<script type="text/javascript">
//<![CDATA[]
/* Table initialisation */
$(document).ready(function() {

    $('.boostrap-tp').tooltip({
        "trigger":"click"
    }).click(function(e){
        e.preventDefault();
    });

    $('.datatable').dataTable({
        "sDom": "<'row-fluid'<'span6'l><'span6'f>r>t<'row-fluid'<'span12'i><'span12 center'p>>",
        "sPaginationType": "bootstrap",
        "oLanguage": {
            "sLengthMenu": "_MENU_ records per page"
        }
    } );
});
//]]>
</script>
{% endblock %}