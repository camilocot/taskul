{% extends "TaskBundle::layout.html.twig" %}
    {% block body %}
    {{ parent() }}
    {% include 'TaskBundle:partials:delete-modal-rest.html.twig' %}
    {% endblock %}
    {% block content %}
    {{ apy_breadcrumb_trail_render() }}
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header" data-original-title>
                <h2><i class="icon-user"></i><span class="break"></span>Task</h2>
                <div class="box-icon">
                    <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <td>{{ entity.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ entity.description|raw }}</td>
                        </tr>
                        <tr>
                            <th>Dateend</th>
                            <td>{{ entity.dateEnd|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Tags</th>
                            <td>{{ entity.tags|labelsinactive|raw }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ entity.status|status(entity.status)|raw }}</td>
                        </tr>
                    </tbody>
                </table>
                 <form class="form-horizontal">
                        <fieldset>
                <div class="form-actions">

                    {% if is_granted('DELETE',entity) %}
                    <button class="btn btn-danger" type="button" data-target="#deleteModal" data-toggle="modal">
                        Delete
                    </button>

                    {% endif %}
                    {% if is_granted('EDIT',entity) %}
                    <a href="{{ path('api_edit_task', { 'id': entity.id }) }}" class="btn btn-success">
                        Edit
                    </a>
                    {% endif %}
                    <a class="btn btn-cancel" href="{{ path('api_get_tasks') }}">
                        Back to the list
                    </a>

                </div>
                </fieldset>
                </form>
            </div>
        </div>
    </div>
    <div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="icon-user"></i><span class="break"></span>Comentarios</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
            {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': entity.id} %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {% include 'TaskBundle:partials:taskOp.js.twig' %}
{% endblock %}