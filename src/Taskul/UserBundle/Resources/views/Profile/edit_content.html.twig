{% form_theme form 'MainBundle:Form:fields.html.twig' %}
{{ apy_breadcrumb_trail_render() }}
<div class="row-fluid sortable">
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-user"></i><span class="break"></span>Edit Profile</h2>
			<div class="box-icon">
			<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content">
			<form class="form-horizontal" action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST">
				<fieldset>
					{{ form_widget(form) }}
				</fieldset>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary"/>{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}</button>
				</div>
			</form>
		</div>

	</div><!--/box-->

</div><!--/row-->
