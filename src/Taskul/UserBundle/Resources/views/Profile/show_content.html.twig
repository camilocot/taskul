{{ apy_breadcrumb_trail_render() }}
{% trans_default_domain "UserBundle" %}
<div class="row-fluid sortable">
	<div class="box span6 noMargin" ontablet="span12" ondesktop="span6">

		<div class="box-header">
			<h2><i class="icon-user"></i><span class="break"></span>{{ 'profile.view'|trans}}</h2>
			<div class="box-icon">
			<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content fos_user_user_show">
			<div class="row">
				<div class="offset1 span3">
					<span class="avatar">
					  {% if user.facebookId %}
				        <img src="https://graph.facebook.com/{{ user.facebookId }}/picture"/>
				      {% else %}
				        <img src="{{ gravatar(user.email) }}" />
				      {% endif %}
				     </span>
			 	</div>
			 	<div class="span8">
					<strong>{{ 'profile.complete_name'|trans }}:</strong> {{ user.firstname }} {{ user.lastname}}</span><br/>
					<strong>{{ 'profile.show_email'|trans }}:</strong> {{ user.email }}</span><br/>
					<strong>{{ 'profile.last_login'|trans }}:</strong> {{ user.lastlogin|date('d/m/y') }}</span><br/>
					<strong>{{ 'user.created'|trans }}:</strong> {{ user.created|date('d/m/y') }}</span><br/>
				</div>
			</div>
			<div class="chat-form">{{'profile.gravatar'|trans|raw}}</div>

		</div><!--/box-->
	</div><!--/row-->
</div>
<div class="row-fluid">
		<a class="quick-button-small span1 ajaxy" href="{{ path('fos_user_change_password') }}" title="{{ 'profile.change_password'|trans({}, 'UserBundle') }}">
			<i class="fa-icon-group"></i>
			<p>{{ 'profile.change_password'|trans }}</p>
		</a>
		<a class="quick-button-small span1 ajaxy" href="{{ path('sonata_user_profile_edit') }}" title="{{ 'profile.edit'|trans({}, 'UserBundle') }}">
			<i class="fa-icon-group"></i>
			<p>{{ 'profile.edit'|trans }}</p>
		</a>
		<button class="quick-button-small btn-danger span1 btn modal-button" data-href="{{ path('taskul_user_disable') }}" data-target="#unsubscribeModal" data-toggle="modal" type="button" title="{{'profile.request.unsubscribe.title'|trans}}">
			<i class="fa-icon-group"></i>
			<p>{{ 'profile.request.unsubscribe.button'|trans }}</p>
		</button>
</div>