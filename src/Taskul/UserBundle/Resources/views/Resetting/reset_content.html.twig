{% form_theme form 'MainBundle:Form:fields.html.twig' %}

<div id="reset_pwd" class="reset_page">
    <div class="container">
        <div class="row">
            <div class="span12 box_wrapper">
                <div class="span12 box">
                    <div>
                        <div class="head">
                            <h4>{% trans %}Reset your password{% endtrans %}</h4>
                            <div class="line"></div>
                        </div>
                        <div class="form">
                    		<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="ajaxform fos_user_resetting_reset" id="reset-pw-form">
                                <fieldset>
                                    <div class="control-group">
                                    <div class="input-prepend">
                                        <span class="add-on"><i class="icon-lock"></i></span>
                                        <input type="password" id="fos_user_resetting_form_new_password" name="fos_user_resetting_form[new][password]" required="required" class="required" placeholder="{% trans %}Type password{% endtrans %}" minlength="6">
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="input-prepend">
                                        <span class="add-on"><i class="icon-lock"></i></span>
                                        <input type="password" id="fos_user_resetting_form_new_password_confirmation" name="fos_user_resetting_form[new][password_confirmation]" required="required" placeholder="{% trans %}Retype password{% endtrans %}" minlength="6"  equalTo="#fos_user_resetting_form_new_password">
                                        {{ form_errors(form.new.password)}}
                                    </div>
                                    </div>
                                    {{ form_widget(form._token) }}
                                    <div class="clearfix"></div>
                                     <input type="submit" name="_submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}">
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>