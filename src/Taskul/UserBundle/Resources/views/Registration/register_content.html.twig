{% form_theme form 'MainBundle:Form:fields.html.twig' %}
{% trans_default_domain "UserBundle" %}

<div id="sign_up2">
    <div class="container">
        <div class="row login">
            <div class="login-box">
                <div class="span5 left_box">
                    <h4>{{ 'registration.title'|trans|raw }}</h4>

                    <div class="perk_box">
                        <div class="perk">
                            <span class="icos"><img src="/img/facebook-icon.png"></span>
                            <p>{{'registration.block1.content'|trans|raw}}.</p>
                        </div>
                        <div class="perk">
                            <span class="icos ico2"><span class="icos"><img src="/img/icons/Crab-128.png"></span></span>
                            <p>{{'registration.block2.content'|trans|raw}}</p>
                        </div>
                    </div>
                </div>
                <div class="span6 signin_box">
                    <div class="box">
                        <div class="box_cont">
                            <div class="social">
                                <h3>{{ 'registration.register'|trans}}</h3>
                                {% include "UserBundle:Helper:facebook_button.html.twig" %}
                            </div>

                            <div class="division">
                                <div class="line l"></div>
                                <span>{{ 'or'|trans({},'MainBundle')}}</span>
                                <div class="line r"></div>
                            </div>
                            <div class="form">
                                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="validate ajaxform">
                                    <div class="control-group {% if form_errors(form.email) %} error {% endif %}">
                                    <div class="input-prepend">
                                        <span class="add-on"><i class="icon-user"></i></span>
                                        <input type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required" class=" email required" placeholder="{{'registration.placeholder.email'|trans}}" {% if user.email %} value="{{ user.email }}" {% else %} value="{{ form.email.vars.value }}" {% endif %}>
                                        {{ form_errors(form)}}
                                    </div>
                                    </div>
                                    {% include "UserBundle:partials:password.html.twig" with {'form_name' : 'fos_user_registration_form'} %}
                                    <input type="submit" class="" name="_submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" >
                                   {{ form_widget(form._token) }}
                                </form>
                                 <hr>

                                {% include "UserBundle:partials:forgot_password.html.twig" %}
                                <hr>
                                <div class="forgot">{{ 'registration.confirm'|trans({'%condiciones%': path('legal'), '%privacidad%': path('privacy')}, 'UserBundle')|raw }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>