{% form_theme form 'MainBundle:Form:fields.html.twig' %}
<div class="row-fluid">
    <div class="row-fluid">
        <div class="login-box">
            <div class="icons">
                <a href="{{ path('homepage') }}"><i class="icon-home"></i></a>
            </div>
            <h2>{% trans %}Create your account{% endtrans %}</h2>

            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="validate ajaxform">
            <fieldset>
                <div class="control-group {% if form_errors(form.email) %} error {% endif %}">
                <div class="input-prepend" title="Email">
                    <span class="add-on"><i class="icon-user"></i></span>
                    <input type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required" class="input-large span10 email required" placeholder="{% trans %}Type email{% endtrans %}" {% if user.email %} value="{{ user.email }}" {% else %} value="{{ form.email.vars.value }}" {% endif %}>
                    {{ form_errors(form)}}
                </div>
                </div>
                <div class="clearfix"></div>
                {% include "UserBundle:partials:password.html.twig" with {'form_name' : 'fos_user_registration_form'} %}
                <div class="clearfix"></div>
                <div class="button-login">
                        <button type="submit" class="btn btn-primary" name="_submit" ><i class="icon-off icon-white"></i> {{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
                    </div>
               {{ form_widget(form._token) }}
            </fieldset>
            </form>
             <hr>
            {% include "UserBundle:Helper:facebook_button.html.twig" %}
            {% include "UserBundle:partials:forgot_password.html.twig" %}
            {% include "UserBundle:partials:login.html.twig" %}
        </div><!--/span-->
    </div><!--/row-->

</div><!--/fluid-row-->