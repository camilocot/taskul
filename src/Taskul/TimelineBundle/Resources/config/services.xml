<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="taskul.timeline.manager.class">Taskul\TimelineBundle\Service\TaskulTimelineManager</parameter>
        <parameter key="taskul.action.manager.class">Taskul\TimelineBundle\Service\TaskulActionManager</parameter>
    </parameters>

    <services>
        <service id="taskul.timeline_manager" class="%taskul.timeline.manager.class%">
            <argument type="service" id="spy_timeline.action_manager" />
            <argument type="service" id="spy_timeline.timeline_manager" />
            <argument type="service" id="security.context" />
        </service>
        <service id="taskul.timeline.spread" class="Taskul\TimelineBundle\Spread\Spread">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="spy_timeline.spread"/>
        </service>
        <service id="taskul.action.manager" class="%taskul.action.manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="router" />
        </service>
    </services>

</container>
