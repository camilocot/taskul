{% extends app.request.isXmlHttpRequest ? "::base_ajax.html.twig" : "MessageBundle::layout.html.twig" %}
{% form_theme form 'MainBundle:Form:fields.html.twig' %}
{% block content %}
{{ apy_breadcrumb_trail_render() }}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="icon-user"></i><span class="break"></span>{% trans from 'FOSMessageBundle' %}send_new{% endtrans %}</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
			<form action="{{ url('fos_message_thread_new') }}" method="post" class="form-horizontal validate" id="form_thread">
				<fieldset>
	                {{ form_row(form.recipient,{'help':'sdasdasasda', 'atrr': { 'class':'required', 'minlength':'10' } }) }}
                    {{ form_row(form.subject) }}
                    {{ form_row(form.body, {'attr':
                    {'placeholder':'Introduzca una descripci√≥n ...', 'class':'nicEdit span11','rows':'10','minlength':'8' } } ) }}

                    {{ form_rest(form) }}
				</fieldset>
				<div class="form-actions">
			        <button class="btn btn-primary" type="submit">Enviar</button>
			    </div>
			</form>
		</div>
    </div><!--/box-->

</div><!--/row-->
{% endblock %}
{% block javascripts %}
{{ parent() }}
{% javascripts
    '@MessageBundle/Resources/public/js/newThread.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
