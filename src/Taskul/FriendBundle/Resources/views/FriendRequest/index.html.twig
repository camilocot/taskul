{% extends "FriendBundle::layout.html.twig" %}
{% block content %}
{{ apy_breadcrumb_trail_render() }}



<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="icon-user"></i><span class="break"></span>Listado de solicudes</h2>
            <div class="box-icon">
            <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
            <a class="quick-button span2" href="{{ path('frequest_sended') }}">
                            <i class="fa-icon-group"></i>
                            <p>Enviadas</p>
                            <span class="notification {% if sended == 0 %}green{% else %}red{% endif %}">{{ sended }}</span>
                        </a>
                        <a class="quick-button span2" href="{{ path('frequest_recibed') }}">
                            <i class="fa-icon-group"></i>
                            <p>Recibidas</p>
                            <span class="notification {% if recibed == 0 %}green{% else %}red{% endif %}">{{ recibed }}</span>
                        </a>
                        <div class="clearfix"></div>
        </div>
    </div>
</div>

{% endblock %}
{% block javascripts %}
  <script>
  $('ul#friendreq_ops').show();
  </script>
{% endblock %}