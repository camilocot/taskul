{% extends app.request.isXmlHttpRequest ? "::base_ajax.html.twig" : "FriendBundle::layout/friendrequest.html.twig" %}
{% form_theme form 'MainBundle:Form:fields.html.twig' %}
{% trans_default_domain "FriendBundle" %}
{% block content %}
{{ apy_breadcrumb_trail_render() }}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header">
            <h2><i class="icon-user"></i><span class="break"></span>{{'friendrequest.email.new.title'|trans}}</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
                <div class="well">
                  <h2>{{ 'friendrequest.new.title'|trans( {}, 'FriendBundle') }}</h2>
                  <p style="margin-bottom: 0;" class="muted">
                    {{ 'friendrequest.new.content'|trans( {}, 'FriendBundle') }}
                  </p>
                </div>
                <form action="{{ path('frequest_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal ajaxform" id="form_request" data-textarea-id="taskul_friendbundle_friendrequesttype_message" novalidate="novalidate">
                   <fieldset>
                      {{ form_errors(form) }}
                      {{ form_row(form.email,{
                        'help': 'friendrequest.email.new.email_help'|trans,
                        'attr': {'placeholder':'friendrequest.new.email_help'|trans,'class':'span11 required validateEmails','maxlength':'255' }
                        })
                      }}
                      {{ form_row(form.message, {'attr': {'placeholder':'friendrequest.email.new.message_help'|trans, 'class':'nicEdit span11','rows':'10'} } ) }}
                      {{ form_rest(form) }}
                      <div class="form-actions">
                        <button type="submit" class="btn btn-success submit-niceditor"><i class="fa-icon-envelope"></i>&nbsp;{{'friendrequest.email.new.send'|trans}}</button>
                        <a href="{{ path('frequest') }}" class="btn ajaxy">
                            <i class="fa-icon-undo"></i>&nbsp;{{'friendrequest.email.new.back'|trans}}
                        </a>
                    </div>
                  </fieldset>
              </form>
        </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
{% javascripts
    '@FriendBundle/Resources/public/js/friendrequest/new.js'
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}