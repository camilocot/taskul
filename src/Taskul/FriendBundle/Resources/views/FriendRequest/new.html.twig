{% extends app.request.isXmlHttpRequest ? "::base_ajax.html.twig" : "FriendBundle::layout/friendrequest.html.twig" %}
{% form_theme form 'MainBundle:Form:fields.html.twig' %}
{% block content %}
{{ apy_breadcrumb_trail_render() }}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="icon-user"></i><span class="break"></span>{{'friendrequest.email.new.title'|trans({},'FriendBundle')}}</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
            <form action="{{ path('frequest_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal ajaxform" id="form_request">
               <fieldset>
                  {{ form_errors(form) }}
                  {{ form_row(form.email,{'help': 'friendrequest.email.new.email_help'|trans({},'FriendBundle') }) }}
                  {{ form_row(form.message, {'attr': {'placeholder':'friendrequest.email.new.message_help'|trans({},'FriendBundle'), 'class':'wysihtml5 span11','rows':'10'} } ) }}
                  {{ form_rest(form) }}
                  <div class="form-actions">
                    <button type="submit" class="btn btn-success"><i class="fa-icon-envelope"></i>&nbsp;{{'friendrequest.email.new.send'|trans({},'FriendBundle')}}</button>
                    <a href="{{ path('frequest') }}" class="btn ajaxy">
                        <i class="fa-icon-undo"></i>&nbsp;{{'friendrequest.email.new.back'|trans({},'FriendBundle')}}
                    </a>
                </div>
            </fieldset>
        </form>
    </div>
</div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
{% javascripts
    '@FriendBundle/Resources/public/js/friendrequest/new.js'
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}