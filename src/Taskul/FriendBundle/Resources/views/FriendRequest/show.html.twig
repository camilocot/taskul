{% extends app.request.isXmlHttpRequest ? "::base_ajax.html.twig" : "FriendBundle::layout/friendrequest.html.twig" %}
{% block content %}
{{ apy_breadcrumb_trail_render() }}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="icon-user"></i><span class="break"></span>{{'friendrequest.view.title'|trans({},'FriendBundle')}}</h2>
            <div class="box-icon">
            <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
            <div class="span12">
                        <h2>{{ 'friendrequest.view.title_note'|trans( {}, 'FriendBundle') }}</h2>
                        <div class="well">
                          <p style="margin-bottom: 0;" class="muted">
                            {{ 'friendrequest.view.note'|trans( {}, 'FriendBundle') }}
                          </p>
                        </div>
                    </div>
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>{{'friendrequest.view.message'|trans({},'FriendBundle')}}</th>
                        <td>{{ entity.message|raw }}</td>
                    </tr>
                    {% if is_granted('OWNER', entity) and entity.email is not empty %}
                    <tr>
                        <th>Email</th>
                        <td>{{ entity.email }}</td>
                    </tr>
                    {% else %}
                    {% if is_granted('OWNER', entity) and entity.to is not null %}
                    <tr>
                        <th>{{'friendrequest.view.to'|trans({},'FriendBundle')}}</th>
                        <td>
                            {% include 'UserBundle:partials:user_avatar.html.twig' with {'user': entity.to } only %}
                            {{ entity.to }}
                        </td>
                    </tr>
                    {% else %}
                    {% if is_granted('VIEW', entity) %}
                    <tr>
                        <th>{{'friendrequest.view.from'|trans({},'FriendBundle')}}</th>
                        <td>
                            {% include 'UserBundle:partials:user_avatar.html.twig' with {'user': entity.from } only %}
                            {{ entity.from }}
                        </td>
                    </tr>
                    {% endif %}
                    {% endif %}
                    {% endif %}
                </tbody>
            </table>
            {% if is_granted('DELETE', entity) %}
            <form class="form-horizontal" >
                    <fieldset>
                    <div class="form-actions">
                    {% if app.user == entity.to %}
                        <button type="button" class="btn btn-success modal-button" title="activate" data-id="{{ entity.id }}" data-target="#activateModal" data-toggle="modal" data-redirect="frequest"><i class="fa-icon-ok icon-white"></i>&nbsp;{{'friendrequest.view.activate'|trans({},'FriendBundle')}}</button>
                    {% endif %}
                    <button type="button" class="btn btn-danger modal-button" title="Delete" data-id="{{ entity.id }}" data-target="#deleteModal" data-toggle="modal" data-redirect="frequest"><i class="icon-trash icon-white"></i>&nbsp;{{'friendrequest.view.delete'|trans({},'FriendBundle')}}</button>
                    <a href="{{ path('frequest') }}" class="btn ajaxy">
                    <i class="fa-icon-undo"></i>&nbsp;{{'friendrequest.view.back'|trans({},'FriendBundle')}}
                    </a>
                    </div>
                    </fieldset>
                </form>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
{% javascripts
    '@FriendBundle/Resources/public/js/friendrequest/show.js'
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}