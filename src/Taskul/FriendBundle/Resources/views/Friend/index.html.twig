{% extends "FriendBundle::layout/friend.html.twig" %}
{% block content %}
{{ apy_breadcrumb_trail_render() }}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title="Listado de amigos">
            <h2><i class="icon-user"></i><span class="break"></span>{{'friend.myfriends'|trans({},'FriendBundle')}}</h2>
            <div class="box-icon">
            <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
            </div>
        </div>
        <div class="box-content">
            {% if entities|length > 0 %}
            <div class="span12 helpinfo alert alert-info">
                <h2>{{ 'friend.title'|trans( {}, 'FriendBundle') }}</h2>
                  <p style="margin-bottom: 0;" class="muted">
                    {{ 'friend.content'|trans( {}, 'FriendBundle') }}
                  </p>
            </div>
            <div class="pull-right" id="filter-list">{{'friend.search'|trans({},'FriendBundle')}}: <input id="filter" type="text" autocomplete="off" /><a href="#clear" class="clear-filter btn" title="{{'friend.search_clean'|trans({},'FriendBundle')}}" rel="tooltip"><i class="fa-icon-trash"></i></a></div>
            <table class="table table-striped table-bordered bootstrap-datatable footable" id="list" data-filter="#filter">
                <thead>
                    <tr>
                        <th data-class="expand" data-sort-initial="true">{{'friend.name'|trans({},'FriendBundle')}}</th>
                        <th data-hide="phone,tablet">Email</th>
                        <th data-sort-ignore="true" data-hide="phone,tablet">{{'friend.actions'|trans({},'FriendBundle')}}</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>
                            {% include 'UserBundle:partials:user_avatar.html.twig' with {'user':entity} only %}
                            {{ entity.firstname }} {{ entity.lastname }}
                        </td>
                        <td>{{ entity.email }}</td>
                        <td>
                        <button class="btn btn-danger modal-button" type="button" data-id="{{ entity.id }}" data-target="#deleteModal" data-toggle="modal"><i class="fa-icon-trash icon-white"></i></button>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot class="footable-pagination">
                    <tr>
                      <td colspan="5"><ul id="pagination" class="footable-nav" ></ul></td>
                    </tr>
                  </tfoot>
            </table>

            {% endif %}
            <div class="alert alert-block warning" id="no-friends" >
                <h4 class="alert-heading">{{'friend.warning.title'|trans({},'FriendBundle')}}</h4>
                <p>
                    {{'friend.warning.text'|trans({ '%email_form_contact%': path('frequest_new'), '%fb_form_contact%': path('import_fb') },'FriendBundle')|raw}}
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
{% javascripts
'@FriendBundle/Resources/public/js/friend/index.js'
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}