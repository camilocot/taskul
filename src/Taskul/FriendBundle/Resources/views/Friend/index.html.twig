{% extends "::base.html.twig" %}
{% block body %}
<h1>FriendRequest list</h1>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td> {{ entity.firstname }}</td>
            <td>{{ entity.email }}</td>
            <td><a href="{{ path('myfriends_delete', {'id':entity.id}) }}">Delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}